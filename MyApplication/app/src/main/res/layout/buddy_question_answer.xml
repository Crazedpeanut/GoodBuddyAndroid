<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="answer" type="au.com.hacklord.goodbuddy.viewmodel.BuddyAnswerViewModel"/>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="180dp"
        android:background="@mipmap/good_buddy_button"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{answer.answer}"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:textSize="26dp" />
    </RelativeLayout>
</layout>